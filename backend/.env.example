# BestUp Backend - Environment Configuration

# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/bestup

# Optional: MongoDB Atlas (Cloud)
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/bestup?retryWrites=true&w=majority

# JWT (for future authentication)
JWT_SECRET=your_super_secret_key_here_change_in_production
JWT_EXPIRE=7d

# Admin Credentials (for future auth)
ADMIN_EMAIL=admin@bestup.com
ADMIN_PASSWORD=admin123

# API Rate Limiting (future feature)
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# CORS Settings
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=debug
